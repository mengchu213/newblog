<%= form_with model: blog_post, html: { class: "bg-white p-6 rounded drop-shadow-lg rounded-xl" } do |form| %>
    <% if form.object.errors.any? %>
        <div class="mb-4">
            <% form.object.errors.full_messages.each do |message| %>
                <div class="bg-red-100 border border-red-400 text-red-700 
                px-4 py-3 rounded relative" role="alert"><%= message %></div>
            <% end %>
        </div>
    <% end %>
 
    <div class="mb-4">
        <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :title, class: "shadow appearance-none border rounded 
        w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none 
        focus:shadow-outline" %>
    </div>
 

    <div class="mb-4">
        <%= tinymce %>
        <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :body, class: "cursor-text tinymce shadow appearance-none border 
        rounded w-full py-2 px-3 text-gray-700 leading-tight 
        focus:outline-none focus:shadow-outline" %>
    </div>

    <%= form.submit "Submit", class: "text-white bg-gradient-to-r from-blue-500 
    via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 
    focus:outline-none focus:ring-blue-300
    font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 cursor-pointer" %>

<% end %>

